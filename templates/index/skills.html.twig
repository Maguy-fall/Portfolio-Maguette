{% extends 'base.html.twig' %}

{% block title %}Compétences{% endblock %}

{% block body %}
<header class="bg-dark my auto text-light">
<h1 class="text-center">Portfolio de Maguette ISSIAKA</h1>
<h2 class="text-center">Développeuse Web</h2>
<br>
    
</header>

<div class="container p-5">

    <div class="row py-5">
    <div class="col-12">
         <h2>Mes Compétences</h2>
        </div>
    </div>

    <div class="row">

    {% for typename,type in skills %}
    <div class="col-4 p-3">
    <h3>{{ typename }}</h3>
    {% for skill in type %}
    <h5 class="card-title">{{ skill.nom }}</h5>
    {% endfor %}
    </div>
    {% endfor %}
    </div>
</div>
{% endblock %}


